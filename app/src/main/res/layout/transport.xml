<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="365dp"
        android:layout_height="96dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/dateText"
            android:layout_width="40dp"
            android:layout_height="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/projnoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/projectNo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dateText" />

        <TextView
            android:id="@+id/dateDisplay"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@+id/dateText"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/projnoDisplay"
            android:layout_width="147dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toEndOf="@+id/projnoText"
            app:layout_constraintTop_toBottomOf="@+id/dateDisplay" />

        <Button
            android:id="@+id/dateB"
            android:layout_width="84dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="@string/Select"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dateDisplay"
            app:layout_constraintTop_toTopOf="parent" />
        <!--android:onClick="datePicker"-->

        <Button
            android:id="@+id/projB"
            android:layout_width="85dp"
            android:layout_height="35dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/Select"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/projnoDisplay"
            app:layout_constraintTop_toBottomOf="@+id/dateB" />

    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:layout_width="589dp"
        android:layout_height="364dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_marginTop="78dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"-->
            <android.support.design.widget.TabItem
                android:id="@+id/tabItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Item" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Qty" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabSite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Site" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabWH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/WH" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Location" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabBatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Batch" />

            <android.support.design.widget.TabItem
                android:id="@+id/tabSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Serial" />
        </android.support.design.widget.TabLayout>
    </ScrollView>

</RelativeLayout>